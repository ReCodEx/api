parameters:
  api:
    address: https://recodex.mff.cuni.cz:4000

  accessManager:
    issuer: https://recodex.mff.cuni.cz
    audience: https://recodex.mff.cuni.cz
    expiration: 604800  # 7 days in seconds
    verificationKey: "recodex-123"

  fileServer:
    address: http://127.0.0.1:9999
    auth:
      username: "user"
      password: "pass"

  broker:
    address: tcp://127.0.0.1:9658
    auth:
      username: "user"
      password: "pass"

  monitor:
    address: wss://recodex.mff.cuni.cz:443/ws

  CAS:
    options:
      ldap:
        hostname: "ldap.cuni.cz"
      cas:
        baseUri: "https://idp.cuni.cz/cas/"

  sis:
    apiBase: https://sis.university.tld/is/
    faculty: FACULTY
    secret: SECRET_TOKEN

  emails:
    apiUrl: https://recodex.mff.cuni.cz:4000
    footerUrl: https://recodex.mff.cuni.cz
    from: "ReCodEx <noreply@recodex.mff.cuni.cz>"
    #debugMode: true  # in debug mode, no messages are sent via SMPT
    #archivingDir: "%appDir%/../log/email-debug"  # a directory where copies of all emails sent are stored (in text files)

  failures:
    emails:
      to: "Administrator <admin@example.com>"

  forgottenPassword:
    redirectUrl: "https://recodex.mff.cuni.cz/en/forgotten-password/change"

  emailVerification:
    redirectUrl: "https://recodex.mff.cuni.cz/en/email-verification"

  mail:
    host: "smtp.ps.stdin.cz"
    clientHost: recodex.mff.cuni.cz
    port: 587
    username: "user"
    password: "pass"
    secure: "tls"
    context:
      ssl:
        verify_peer: false
        verify_peer_name: false
        allow_self_signed: true


doctrine:
  host: localhost
  user: recodex-api
  password: recodex
  dbname: recodex-api
