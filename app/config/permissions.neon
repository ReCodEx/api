roles:
    - name: unauthenticated

    - name: student
      parents: unauthenticated

    - name: supervisor-student
      parents: student

    - name: supervisor
      parents: supervisor-student

    - name: empowered-supervisor
      parents: supervisor

    - name: superadmin

permissions:
    - allow: true
      role: scope-master

    #######################################
    # Superadmin can do (almost) anything #
    #######################################

    - allow: false
      resource: user
      actions:
        - forceChangePassword
      conditions:
        - user.isSameUser

    - allow: true
      role: superadmin

    #############################
    # User takeover permissions #
    #############################

    - allow: true
      role: superadmin
      resource: user
      actions:
        - takeOver

    - allow: false  # A safety mechanism that prevents us from accidentally allowing account takeover to non-admins (e.g. by wildcard rules)
      actions:
        - takeOver

    #####################
    # Group permissions #
    #####################

    - allow: true
      role: scope-read-all
      resource: group
      actions:
          - viewAssignments
          - viewPublicDetail
          - viewDetail
          - viewStudents
          - viewStudentStats
          - viewStats
          - viewAll
          - viewInvitations

    - allow: true
      role: scope-plagiarism
      resource: group
      actions:
          - viewAssignments
          - viewStudents
          - viewAll
          - viewPublicDetail
          - viewDetail

    - allow: true
      role: scope-group-external
      resource: group
      actions:
          - viewExternalAttributes

    - allow: true
      role: scope-group-external
      resource: group
      actions:
          - setExternalAttributes
          - addStudent
          - removeStudent
          - addMember
          - removeMember
          - addSubgroup
      conditions:
          - group.isNotArchived

    - allow: true
      resource: group
      role: scope-group-external
      actions:
          - addSubgroup
      conditions:
          - group.isNotArchived
          - group.isNotExam

    - allow: true
      role: student
      resource: group
      actions: viewAssignments
      conditions:
          - group.isMember
          - group.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: group
      actions:
          - viewDetail
          - viewStudents
      conditions:
          - group.userIsNotLockedElsewhereStrictly
          - or:
              - group.isMember
              - group.isPublic
              - group.isRootGroupOfInstance
          - group.isInSameInstance

    - allow: true
      role: student
      resource: group
      actions:
          - viewPublicDetail
      conditions:
          - group.isInSameInstance

    - allow: true
      role: student
      resource: group
      actions:
          - viewInvitations
      conditions:
          - group.isInSameInstance
          - group.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: group
      actions:
          - acceptInvitation
      conditions:
          - group.isInSameInstance
          - group.isNotArchived
          - group.userIsNotLockedElsewhere  # user should not be locked at all, but only members can lock themselves in a group, so this is ok

    - allow: true  # A student can join public groups
      role: student
      resource: group
      actions:
          - addStudent
      conditions:
          - group.isPublic
          - group.isInSameInstance
          - group.isNotArchived
          - student.isSameUser
          - student.isNotGroupLocked

    - allow: true
      role: student
      resource: group
      actions:
          - removeStudent  # A student can leave any group...
      conditions:
          - group.isNotDetainingStudents  # ... which does not detain students
          - group.isNotExam  # exam groups automatically detain students
          - group.isMember
          - group.isNotArchived
          - student.isSameUser
          - student.isNotGroupLocked

    - allow: true
      role: student
      resource: group
      actions:
          - viewStudentStats
      conditions:
          - group.isMember
          - student.isSameUser
          - group.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: group
      actions:
          - viewStats
      conditions:
          - group.areStatsPublic
          - group.userIsNotLockedElsewhereStrictly

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - viewStats
          - viewStudentStats
          - viewPublicDetail
      conditions:
          or:
              - group.isSupervisorOrAdmin
              - group.isObserver

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - inviteStudents  # create future invitations, that the students can use to join
          - editInvitations  # add, update, and remove invitation links (for already registered users) 
          - removeStudent
      conditions:
          - group.isSupervisorOrAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor
      actions:
          - addStudent  # requires permissions to read all users' private data
      conditions:
          - group.isSupervisorOrAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - sendEmail
      conditions:
          - group.isSupervisorOrAdmin

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - update
          - remove
          - removeMember
      conditions:
          - group.isAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor
      actions:
          - addMember  # requires permissions to read all users' private data
      conditions:
          - group.isAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - becomeMember  # other than student
      conditions:
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - setOrganizational
      conditions:
          - group.isAdmin
          - group.isNotArchived
          - group.isNotExam
          - group.hasNoExamPeriod

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - addSubgroup  # note: exam groups must have no sub-groups
      conditions:
          - group.isAdmin
          - group.isNotArchived
          - group.isNotExam

    - allow: true
      resource: group
      role: empowered-supervisor
      actions:
          - archive
      conditions: group.isAdmin

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - setExamFlag
          - setExamPeriod
      conditions:
          - group.isAdmin
          - group.isNotArchived
          - group.isNotOrganizational

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - removeExamPeriod
      conditions:
          - group.isAdmin
          - group.isNotArchived
          - group.isBeforeExamPeriod

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - viewExamLocks
      conditions:
          - group.isAdmin

    - allow: true
      resource: group
      role: supervisor
      actions:
          - viewExamLocksIPs
      conditions:
          - group.isAdmin

    - allow: true
      role: student
      resource: group
      actions:
          - lockStudent  # students lock themselves
      conditions:
          - group.isNotArchived
          - group.isExamInProgress
          - group.isMember
          - student.isSameUser
          - student.isNotGroupLocked

    - allow: true
      role: supervisor-student
      resource: group
      actions:
          - unlockStudent  # only a supervisor of the same group can unlock the student
      conditions:
          - group.isExamInProgress
          - group.isSupervisorOrAdmin

    ########################
    # Instance permissions #
    ########################

    - allow: true
      role: scope-read-all
      resource: instance
      actions:
        - viewAll
        - viewDetail
        - viewLicences

    - allow: true
      role: unauthenticated
      resource: instance
      actions:
        - viewAll
        - viewDetail

    - allow: true
      role: superadmin # TODO instance admin role
      resource: instance
      actions:
          - viewLicences
      conditions:
          - instance.isMember

    ####################
    # User permissions #
    ####################

    - allow: true
      role: scope-read-all
      resource: user
      actions:
        - viewPublicData
        - viewInstances
        - viewGroups
        - viewDetail
        - viewList
        - viewAll
        - listPendingReviews
        - listReviewRequests

    - allow: true
      role: scope-plagiarism
      resource: user
      actions:
        - viewPublicData
        - viewList

    - allow: true
      role: scope-users
      resource: user
      actions:
        - viewPublicData
        - viewGroups
        - viewDetail
        - viewList
        - viewAll
        - create
        - updateProfile
        - updatePersonalData
        - setIsAllowed
        - setExternalIds
        - createLocalAccount
        - invalidateTokens

    - allow: true
      role: student
      resource: user
      actions:
        - viewList

    - allow: true
      role: student
      resource: user
      actions:
        - viewPublicData
      conditions:
        - user.isInSameInstance

    - allow: true
      role: student
      resource: user
      actions:
          - updateProfile
          - viewInstances
          - viewGroups
          - viewDetail
          - createLocalAccount
          - viewCalendars
          - editCalendars
      conditions: user.isSameUser

    - allow: true
      role: student
      resource: user
      actions:
        - updatePersonalData
      conditions:
        - user.isSameUser
        - user.isNotExternalAccount

    - allow: true
      resource: user
      actions:
        - invalidateTokens
      conditions:
        - user.isSameUser

    - allow: true
      role: supervisor-student
      resource: user
      actions:
        - viewDetail
      conditions: user.isReaderOfJoinedGroup

    - allow: true
      role: supervisor-student
      resource: user
      actions:
          - listPendingReviews
          - listReviewRequests
      conditions: user.isSameUser

    - allow: true
      role: supervisor-student
      resource: user
      actions:
        - inviteForRegistration

    - allow: true
      role: supervisor
      resource: user
      actions:
        - viewDetail
        - viewAll

    ##########################
    # Assignment permissions #
    ##########################

    - allow: true
      role: scope-read-all
      resource: assignment
      actions:
        - viewDetail
        - viewSubmissions
        - viewAssignmentSolutions

    - allow: true
      role: scope-plagiarism
      resource: assignment
      actions:
        - viewDetail
        - viewSubmissions
        - viewAssignmentSolutions

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewDetail
      conditions:
          - assignment.isAssignee
          - assignment.isVisible
          - assignment.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: assignment
      actions:
          - submit
      conditions:
          - assignment.acceptsSubmissions
          - assignment.isInActiveGroup
          - assignment.isAssignee
          - assignment.isVisible
          - assignment.userIsNotLockedElsewhere
          - student.isSameUser
          - or:
              - assignment.isExamNotInProgress
              - assignment.isExamInProgressAndStudentLocked  # it is during the exam, but the user is already locked

    - allow: true
      role: supervisor-student
      resource: assignment
      actions:
          - viewDetail
          - viewDescription
          - viewSubmissions
          - viewAssignmentSolutions
      conditions:
          - assignment.isObserverOrBetter

    - allow: true
      role: supervisor-student
      resource: assignment
      actions:
          - update
          - remove
          - submit
          - resubmitSubmissions
          - viewAssignmentAsyncJobs
      conditions:
          - assignment.acceptsSubmissions
          - assignment.isInActiveGroup
          - assignment.isSupervisorOrAdmin

    - allow: true
      role: supervisor-student
      resource: group
      actions:
          - assignExercise
      conditions:
          - group.isSupervisorOrAdmin
          - group.isNotArchived

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewSubmissions
      conditions:
          - student.isSameUser
          - assignment.isVisible
          - assignment.userIsNotLockedElsewhereStrictly

    ###################################
    # Assignment Solution permissions #
    ###################################

    - allow: true
      role: scope-read-all
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
          - viewEvaluationDetails
          - viewEvaluationValues
          - viewEvaluationJudgeStdout
          - viewEvaluationJudgeStderr
          - viewResubmissions
          - viewReview
          - viewDetectedPlagiarisms

    - allow: true
      role: scope-plagiarism
      resource: assignmentSolution
      actions:
          - viewDetail

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
          - viewReview
      conditions:
          - assignmentSolution.isAuthor
          - assignmentSolution.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - update
          - setFlagAsStudent
      conditions:
          - assignmentSolution.isAuthor
          - assignmentSolution.isInActiveGroup
          - assignmentSolution.userIsNotLockedElsewhere

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - viewEvaluationDetails
      conditions:
          - assignmentSolution.areEvaluationDetailsPublic
          - assignmentSolution.isAuthor
          - assignmentSolution.userIsNotLockedElsewhereStrictly

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - viewEvaluationValues
      conditions:
          - assignmentSolution.areEvaluationDetailsPublic
          - assignmentSolution.areMeasuredValuesPublic
          - assignmentSolution.isAuthor
          - assignmentSolution.userIsNotLockedElsewhereStrictly

    - allow: true
      role: supervisor-student
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
          - viewEvaluationDetails
          - viewEvaluationValues
          - viewResubmissions
          - viewReview
          - viewDetectedPlagiarisms
          - downloadResultArchive
      conditions:
          - assignmentSolution.isObserverOrBetter

    - allow: true
      role: supervisor-student
      resource: assignmentSolution
      actions:
          - deleteEvaluation
          - update
          - delete
          - setBonusPoints
          - setFlag
          - setFlagAsStudent
          - review
          - addReviewComment
      conditions:
          - assignmentSolution.isSupervisorOrAdmin
          - assignmentSolution.isInActiveGroup

    - allow: true
      role: supervisor-student
      resource: assignmentSolution
      actions:
          - editReviewComment
          - deleteReviewComment
      conditions:
          or:
              - reviewComment.isAuthor
              - assignmentSolution.isAdmin

    - allow: true
      role: supervisor-student
      resource: assignmentSolution
      actions:
          - deleteReview
      conditions:
          - assignmentSolution.isAdmin
          - assignmentSolution.isInActiveGroup

    - allow: true
      resource: assignmentSolution
      actions:
          - viewEvaluationJudgeStdout
      conditions:
          or:
              - assignmentSolution.isObserverOrBetter
              - assignmentSolution.areJudgeStdoutsPublic

    - allow: true
      resource: assignmentSolution
      actions:
          - viewEvaluationJudgeStderr
      conditions:
          or:
              - assignmentSolution.isObserverOrBetter
              - assignmentSolution.areJudgeStderrsPublic

    #######################
    # Comment permissions #
    #######################

    - allow: true
      role: scope-read-all
      resource: comment
      actions:
          - viewThread

    - allow: true
      role: student
      resource: comment
      actions:
          - alter
          - delete
      conditions:
          - userIsNotGroupLocked
          - or:
              - comment.isAuthor
              - comment.isSupervisorInGroupOfCommentedSolution
              - comment.isSupervisorInGroupOfCommentedAssignment

    - allow: true
      role: student
      resource: comment
      actions:
          - viewThread
          - addComment
      conditions:  # TODO - make sure only appropriate group members/authors can do this
          - userIsNotGroupLocked

    - allow: true
      role: student
      resource: comment
      actions:
          - createThread
      conditions:
          - userIsNotGroupLocked

    ########################
    # Exercise permissions #
    ########################

    - allow: true
      role: scope-read-all
      resource: exercise
      actions:
          - viewAll
          - viewAllAuthors
          - viewDetail
          - viewConfig
          - viewLimits
          - viewScoreConfig
          - viewAssignments
          - viewList
          - viewAllTags

    - allow: true
      role: scope-ref-solutions
      resource: exercise
      actions:
          - viewAll
          - viewAllAuthors
          - viewDetail
          - viewConfig
          - viewLimits
          - viewScoreConfig
          - viewAssignments
          - viewList
          - viewAllTags

    - allow: true
      role: scope-ref-solutions
      resource: exercise
      actions:
          - addReferenceSolution
      conditions:
          - exercise.acceptsSubmissions

    - allow: true
      role: student
      resource: exercise
      actions:
        - viewList

    # The exercise.viewDetail is special since its rules are also hard coded in Exercises::getPreparedForPagination
    # method (it was necessary for performance optimizations).
    # If the viewDetail rules change, they must be changed in Exercises repository class as well.
    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - viewDetail
      conditions:
          - exercise.isGloballyPublic

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - viewDetail
          - viewConfig
          - viewLimits
          - viewScoreConfig
          - viewAssignments
      conditions:
          or:
            - exercise.isAuthorOrAdmin
            - exercise.isSubGroupNonStudentMember
            - exercise.isSuperGroupAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - addReferenceSolution
          - fork
          - assign
      conditions:
          - exercise.acceptsSubmissions
          - exercise.notArchived
          - or:
              - exercise.isAuthorOrAdmin
              - exercise.isSubGroupNonStudentMember
              - exercise.isSuperGroupAdmin

    - allow: true # Admin of the group of an exercise has most of the rights to the exercise
      role: supervisor-student
      resource: exercise
      actions:
          - setLimits
          - setScoreConfig
          - update
          - addTag
          - removeTag
      conditions:
          - exercise.notArchived
          - or:
              - exercise.isSuperGroupAdmin
              - exercise.isAuthorOrAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - archive
      conditions:
          - or:
              - exercise.isSuperGroupAdmin
              - exercise.isAuthorOrAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - attachGroup
      conditions:
          - exercise.notArchived
          - group.isSupervisorOrAdmin
          - or:
            - exercise.isSuperGroupAdmin
            - exercise.isAuthorOrAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - detachGroup
      conditions:
          - exercise.notArchived
          - group.isSupervisorOrAdmin
          - or:
            - exercise.isSuperGroupAdmin
            - exercise.isAuthorOrAdmin
          - exercise.hasAtLeastTwoAttachedGroups

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - updateAdmins
      conditions:
          - exercise.notArchived
          - exercise.isAuthorOrAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - remove
      conditions:
          - exercise.isAuthorOrAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - viewAll
          - viewAllAuthors
          - viewAllTags
          - create  # this is a generic rule (used to determine whether the user can be admin/author)

    - allow: true
      role: supervisor-student
      resource: group
      actions:
          - createExercise  # this is an explicit rule tested in creation endpoint (exercise is always created in a group)
      conditions:
          - group.isSupervisorOrAdmin
          - group.isNotArchived

    #######################
    # Reference solutions #
    #######################

    - allow: true
      role: scope-read-all
      resource: referenceExerciseSolution
      actions:
          - viewDetail

    - allow: true
      role: scope-ref-solutions
      resource: referenceExerciseSolution
      actions:
          - viewDetail
          - update
          - promote

    - allow: true
      role: scope-ref-solutions
      resource: referenceExerciseSolution
      actions:
          - evaluate
          - deleteEvaluation
          - setVisibility
          - delete
      conditions:
          - referenceExerciseSolution.canEvaluate
          - referenceExerciseSolution.isExerciseNotArchived
          - or:
              - referenceExerciseSolution.isAuthor
              - and:
                  - referenceExerciseSolution.isPublic
                  - or:
                      - referenceExerciseSolution.isExerciseAuthorOrAdmin
                      - referenceExerciseSolution.isExerciseSuperGroupAdmin

    - allow: true
      role: supervisor-student
      resource: referenceExerciseSolution
      actions:
          - viewDetail
      conditions:
          - or:
              - referenceExerciseSolution.isAuthor
              - and:
                  - referenceExerciseSolution.isPublic
                  - or:
                      - referenceExerciseSolution.isExerciseAuthorOrAdmin
                      - referenceExerciseSolution.isExerciseSuperGroupAdmin
                      - referenceExerciseSolution.isExerciseSubGroupNonStudentMember

    - allow: true
      role: supervisor-student
      resource: referenceExerciseSolution
      actions:
          - update
      conditions:
          - or:
              - referenceExerciseSolution.isAuthor
              - and:
                  - referenceExerciseSolution.isPublic
                  - or:
                      - referenceExerciseSolution.isExerciseAuthorOrAdmin
                      - referenceExerciseSolution.isExerciseSuperGroupAdmin

    - allow: true
      role: supervisor-student
      resource: referenceExerciseSolution
      actions:
          - evaluate
          - deleteEvaluation
          - setVisibility
          - delete
      conditions:
          - referenceExerciseSolution.canEvaluate
          - referenceExerciseSolution.isExerciseNotArchived
          - or:
              - referenceExerciseSolution.isAuthor
              - and:
                  - referenceExerciseSolution.isPublic
                  - or:
                      - referenceExerciseSolution.isExerciseAuthorOrAdmin
                      - referenceExerciseSolution.isExerciseSuperGroupAdmin

    - allow: true
      role: supervisor-student
      resource: referenceExerciseSolution
      actions:
          - promote
      conditions:
          - referenceExerciseSolution.isExerciseNotArchived
          - referenceExerciseSolution.isExerciseAuthorOrAdmin

    #############################
    # Uploaded file permissions #
    #############################

    - allow: true
      role: scope-read-all
      resource: uploadedFile
      actions:
          - download
          - viewDetail
          - downloadExerciseFile  # deprecated (replaced with generic download)

    - allow: true
      role: scope-ref-solutions
      resource: uploadedFile
      actions:
          - download
          - viewDetail
          - downloadExerciseFile  # deprecated (replaced with generic download)
          - upload

    - allow: true
      role: scope-ref-solutions
      resource: uploadedPartialFile
      actions:
          - appendPartial
          - cancelPartial
          - completePartial
      conditions:
          - file.isStartedByCurrentUser

    - allow: true
      role: student
      resource: uploadedFile
      actions:
          - upload

    - allow: true
      role: student
      resource: uploadedPartialFile
      actions:
          - appendPartial
          - cancelPartial
          - completePartial
      conditions:
          - file.isStartedByCurrentUser

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          or:
            - file.isSolutionInSupervisedOrObservedGroup
            - file.isReferenceSolutionInSupervisedOrObservedSubGroup
            - file.isPublic
            - file.isOwner
            - file.isRelatedToAssignment  # deprecated (will be removed with Attachment files)
            - file.isAuthorOfFileExercises
            - file.isExerciseFileInGroupUserSupervises

    # deprecated (will be removed with Attachment files)
    - allow: true
      role: supervisor-student
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isAttachmentFile
          - file.isExercisePublic

    - allow: true
      role: supervisor-student
      resource: uploadedFile
      actions:
          - downloadExerciseFile  # deprecated (replaced with generic download)
      conditions:
          or:
            - file.isAuthorOfFileExercises
            - file.isExerciseFileInGroupUserSupervises

    #####################################
    # Runtime environments permissions #
    #####################################

    - allow: true
      role: scope-read-all
      resource: runtimeEnvironment
      actions:
          - viewAll

    - allow: true
      role: student
      resource: runtimeEnvironment
      actions:
          - viewAll

    ##############################
    # Hardware group permissions #
    ##############################

    - allow: true
      role: scope-read-all
      resource: hardwareGroup
      actions:
          - viewAll

    - allow: true
      role: supervisor-student
      resource: hardwareGroup
      actions:
          - viewAll

    #########################
    # Pipelines permissions #
    #########################

    - allow: true
      role: scope-read-all
      resource: pipeline
      actions:
          - viewDetail
          - viewAll

    - allow: true
      role: supervisor-student
      resource: pipeline
      actions:
          - viewDetail
          - viewAll

    - allow: true
      role: supervisor-student
      resource: pipeline
      actions:
          - update
          - remove
          - fork
      conditions:
          - pipeline.isAuthor

    - allow: true
      role: empowered-supervisor
      resource: pipeline
      actions:
          - create
          - fork

    ###################
    # Sis permissions #
    ###################

    - allow: true
      role: scope-read-all
      resource: sis
      actions:
        - viewTerms
        - viewCourses

    - allow: true
      role: supervisor-student
      resource: sis
      actions:
        - createTerm
        - editTerm
        - deleteTerm
        - viewTerms

    - allow: true
      resource: sis
      actions:
        - createGroup
      conditions:
        - course.isSupervisor
        - groupContext.doesTermMatch
        - groupContext.isParentGroupAssociatedWithCourse

    - allow: true
      resource: sis
      actions:
        - viewCourses
      conditions:
        - sisId.isLinkedToUser

    - allow: true
      resource: sis
      actions:
        - bindGroup
        - unbindGroup
      conditions:
        - group.isAdmin
        - course.isSupervisor

    - allow: true
      resource: group
      actions: addStudent
      conditions:
        - group.isInSameInstance
        - student.isSameUser
        - group.isSisStudent
        - group.isNotArchived
        
    #################################
    # Shadow Assignment permissions #
    #################################

    - allow: true
      role: scope-read-all
      resource: shadowAssignment
      actions:
        - viewDetail
        - viewAllPoints

    - allow: true
      role: student
      resource: shadowAssignment
      actions:
          - viewDetail
      conditions:
          - assignment.isAssignee
          - assignment.isPublic
          - assignment.userIsNotLockedElsewhereStrictly

    - allow: true
      resource: shadowAssignment
      actions:
          - viewDetail
          - viewAllPoints
      conditions:
          - assignment.isSupervisor

    - allow: true
      resource: shadowAssignment
      actions:
          - update
          - remove
          - createPoints
          - updatePoints
          - removePoints
      conditions:
          - assignment.isSupervisor
          - assignment.isInActiveGroup

    - allow: true
      resource: group
      actions:
          - createShadowAssignment
      conditions:
          - group.isSupervisorOrAdmin
          - group.isNotArchived

    ############################
    # Notification permissions #
    ############################

    - allow: true
      role: scope-read-all
      resource: notification
      actions:
        - viewAll
        - viewCurrent
        - viewDetail

    - allow: true
      role: student
      resource: notification
      actions:
        - viewCurrent

    - allow: true
      resource: notification
      actions:
        - viewDetail
      conditions:
        - notification.hasRole
        - or:
          - notification.isGlobal
          - notification.isGroupsMember

    - allow: true
      role: supervisor
      resource: notification
      actions:
        - create

    - allow: true
      resource: notification
      actions:
        - addGroup
      conditions:
        - group.isAdmin

    - allow: true
      resource: notification
      actions:
        - update
        - remove
      conditions:
        - or:
          - notification.isAncestorGroupAdmin
          - notification.isAuthor

    #########################
    # AsyncJobs permissions #
    #########################

    - allow: true
      role: scope-read-all
      resource: asyncJob
      actions:
        - viewDetail
        - list

    - allow: true
      role: student
      resource: asyncJob
      actions:
        - viewDetail
        - abort
      conditions:
        - asyncJob.isCreator

    - allow: true
      role: student
      resource: asyncJob
      actions:
        - list

    ####################################
    # Plagiarism detection permissions #
    ####################################

    - allow: true
      role: scope-plagiarism
      resource: plagiarism
      actions:
          - createBatch
          - updateBatch

    - allow: true
      role: supervisor-student
      resource: plagiarism
      actions:
        - viewBatches
