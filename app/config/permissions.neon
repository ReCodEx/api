roles:
    - name: unauthenticated

    - name: student
      parents: unauthenticated

    - name: supervisor-student
      parents: student

    - name: supervisor
      parents: supervisor-student

    - name: empowered-supervisor
      parents: supervisor

    - name: superadmin

permissions:
    - allow: true
      role: scope-master

    #######################################
    # Superadmin can do (almost) anything #
    #######################################

    - allow: false
      resource: user
      actions:
        - forceChangePassword
      conditions:
        - user.isSameUser

    - allow: true
      role: superadmin

    #############################
    # User takeover permissions #
    #############################

    - allow: true
      role: superadmin
      resource: user
      actions:
        - takeOver

    - allow: false  # A safety mechanism that prevents us from accidentaly allowing account takeover to non-admins (e.g. by wildcard rules)
      actions:
        - takeOver

    #####################
    # Group permissions #
    #####################

    - allow: true
      role: scope-read-all
      resource: group
      actions:
          - viewAssignments
          - viewExercises
          - viewStudents
          - viewPublicDetail
          - viewDetail
          - viewSubgroups
          - viewMembers
          - viewStudents
          - viewStudentStats
          - viewStats
          - viewAll

    - allow: true
      role: student
      resource: group
      actions: viewAssignments
      conditions: group.isMember

    - allow: true
      role: student
      resource: group
      actions:
          - viewStudents
          - viewDetail
          - viewSubgroups
          - viewMembers
      conditions:
          - or:
              - group.isAdmin
              - group.isMember
              - group.isPublic
              - group.isRootGroupOfInstance
          - group.isInSameInstance

    - allow: true
      role: student
      resource: group
      actions: viewPublicDetail
      conditions: group.isInSameInstance

    - allow: true # A student can join public groups
      role: student
      resource: group
      actions:
        - addStudent
      conditions:
        - group.isPublic
        - group.isInSameInstance
        - student.isSameUser
        - group.isNotArchived

    - allow: true
      role: student
      resource: group
      actions:
        - removeStudent # A student can leave any group...
      conditions:
        - group.isNotDetainingStudents # ... which does not detain students
        - group.isMember
        - student.isSameUser
        - group.isNotArchived

    - allow: true
      role: student
      resource: group
      actions:
        - viewStudentStats
      conditions:
        - group.isMember
        - student.isSameUser

    - allow: true
      role: student
      resource: group
      actions: viewStats
      conditions: group.areStatsPublic

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - viewExercises
          - viewStats
          - viewStudentStats
          - viewPublicDetail
      conditions:
          or:
              - group.isSupervisor
              - group.isObserver

    - allow: true
      resource: group
      role: supervisor
      actions:
          - addStudent  # requires permissions to read all users' private data
          - removeStudent
      conditions:
          - group.isSupervisor
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - sendEmail
      conditions:
          - group.isAdmin

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - update
          - remove
          - addSubgroup
          - removeMember
      conditions:
          - group.isAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor
      actions:
          - addMember  # requires permissions to read all users' private data
      conditions:
          - group.isAdmin
          - group.isNotArchived

    - allow: true
      resource: group
      role: supervisor-student
      actions:
          - becomeMember  # other than student
      conditions:
          - group.isNotArchived

    - allow: true
      resource: group
      role: empowered-supervisor
      actions:
          - archive
      conditions: group.isAdmin

    ########################
    # Instance permissions #
    ########################

    - allow: true
      role: scope-read-all
      resource: instance
      actions:
        - viewAll
        - viewDetail
        - viewLicences

    - allow: true
      role: unauthenticated
      resource: instance
      actions:
        - viewAll
        - viewDetail

    - allow: true
      role: superadmin # TODO instance admin role
      resource: instance
      actions:
          - viewLicences
      conditions:
          - instance.isMember

    ####################
    # User permissions #
    ####################

    - allow: true
      role: scope-read-all
      resource: user
      actions:
        - viewPublicData
        - viewExercises
        - viewInstances
        - viewGroups
        - viewDetail
        - viewList
        - viewAll

    - allow: true
      role: student
      resource: user
      actions:
        - viewList

    - allow: true
      role: student
      resource: user
      actions:
        - viewPublicData
      conditions:
        - user.isInSameInstance

    - allow: true
      role: student
      resource: user
      actions:
          - updateProfile
          - viewExercises
          - viewInstances
          - viewGroups
          - viewDetail
          - createLocalAccount
      conditions: user.isSameUser

    - allow: true
      role: student
      resource: user
      actions:
        - updatePersonalData
      conditions:
        - user.isSameUser
        - user.isNotExternalAccount

    - allow: true
      resource: user
      actions:
        - invalidateTokens
      conditions:
        - user.isSameUser

    - allow: true
      role: supervisor-student
      resource: user
      actions:
        - viewDetail
      conditions: user.isReaderOfJoinedGroup

    - allow: true
      role: supervisor
      resource: user
      actions:
        - viewDetail
        - viewAll

    ##########################
    # Assignment permissions #
    ##########################

    - allow: true
      role: scope-read-all
      resource: assignment
      actions:
        - viewDetail
        - viewSubmissions
        - viewAssignmentSolutions

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewDetail
      conditions:
          - assignment.isAssignee
          - assignment.isVisible

    - allow: true
      role: student
      resource: assignment
      actions:
          - submit
      conditions:
          - assignment.isInActiveGroup
          - assignment.isAssignee
          - assignment.isVisible
          - student.isSameUser

    - allow: true
      resource: assignment
      actions:
          - viewDetail
          - viewDescription
          - viewSubmissions
          - viewAssignmentSolutions
      conditions:
          - assignment.isObserverOrBetter

    - allow: true
      resource: assignment
      actions:
          - update
          - remove
          - submit
          - resubmitSubmissions
      conditions:
          - assignment.isInActiveGroup
          - assignment.isSupervisorOrAdmin

    - allow: true
      resource: group
      actions:
          - assignExercise
      conditions:
          - group.isSupervisor
          - group.isNotArchived

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewSubmissions
      conditions:
          - student.isSameUser

    ###################################
    # Assignment Solution permissions #
    ###################################

    - allow: true
      role: scope-read-all
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
          - viewEvaluationDetails
          - viewEvaluationValues
          - viewEvaluationJudgeStdout
          - viewEvaluationJudgeStderr
          - viewResubmissions

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
      conditions:
          - assignmentSolution.isAuthor

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - update
      conditions:
          - assignmentSolution.isAuthor
          - assignmentSolution.isInActiveGroup

    - allow: true
      role: student
      resource: assignmentSolution
      actions:
          - viewEvaluationDetails
      conditions:
          - assignmentSolution.areEvaluationDetailsPublic
          - assignmentSolution.isAuthor

    - allow: true
      resource: assignmentSolution
      actions:
          - viewDetail
          - viewEvaluation
          - viewEvaluationDetails
          - viewEvaluationValues
          - viewResubmissions
          - downloadResultArchive
      conditions:
          - assignmentSolution.isObserverOrBetter

    - allow: true
      resource: assignmentSolution
      actions:
          - deleteEvaluation
          - update
          - delete
          - setBonusPoints
          - setAccepted
          - setFlag
      conditions:
          - assignmentSolution.isSupervisorOrAdmin
          - assignmentSolution.isInActiveGroup

    - allow: true
      resource: assignmentSolution
      actions:
          - viewEvaluationJudgeStdout
      conditions:
          or:
              - assignmentSolution.isObserverOrBetter
              - assignmentSolution.areJudgeStdoutsPublic

    - allow: true
      resource: assignmentSolution
      actions:
          - viewEvaluationJudgeStderr
      conditions:
          or:
              - assignmentSolution.isObserverOrBetter
              - assignmentSolution.areJudgeStderrsPublic

    #######################
    # Comment permissions #
    #######################

    - allow: true
      role: scope-read-all
      resource: comment
      actions:
          - viewThread

    - allow: true
      role: student
      resource: comment
      actions:
          - alter
          - delete
      conditions:
          or:
              - comment.isAuthor
              - comment.isSupervisorInGroupOfCommentedSolution
              - comment.isSupervisorInGroupOfCommentedAssignment

    - allow: true # TODO
      role: student
      resource: comment
      actions:
          - createThread
          - viewThread
          - addComment

    ########################
    # Exercise permissions #
    ########################

    - allow: true
      role: scope-read-all
      resource: exercise
      actions:
          - viewAll
          - viewAllAuthors
          - viewDetail
          - viewConfig
          - viewLimits
          - viewScoreConfig
          - viewPipelines
          - viewAssignments
          - viewList
          - viewAllTags

    - allow: true
      role: student
      resource: exercise
      actions:
        - viewList

    - allow: true
      resource: exercise
      actions:
          - viewDetail
          - viewConfig
          - viewLimits
          - viewScoreConfig
          - viewPipelines
          - viewAssignments
          - addReferenceSolution
          - fork
          - assign
      conditions:
          or:
            - exercise.isAuthor
            - exercise.isSubGroupNonStudentMember
            - exercise.isSuperGroupAdmin

    - allow: true # Admin of the group of an exercise has most of the rights to the exercise
      resource: exercise
      actions:
          - setLimits
          - setScoreConfig
          - update
          - attachPipeline
          - detachPipeline
          - addTag
          - removeTag
      conditions:
          or:
            - exercise.isSuperGroupAdmin
            - exercise.isAuthor

    - allow: true
      resource: exercise
      actions:
          - attachGroup
      conditions:
          and:
            - or:
              - exercise.isSuperGroupAdmin
              - exercise.isAuthor
            - group.isSupervisor

    - allow: true
      resource: exercise
      actions:
          - detachGroup
      conditions:
          and:
            - or:
              - exercise.isSuperGroupAdmin
              - exercise.isAuthor
            - exercise.hasAtLeastTwoAttachedGroups
            - group.isSupervisor

    - allow: true
      resource: exercise
      actions:
          - remove
      conditions:
          - exercise.isAuthor

    - allow: true
      resource: referenceExerciseSolution
      actions:
          - evaluate
          - deleteEvaluation
      conditions:
          or:
            - referenceExerciseSolution.isExerciseAuthor
            - referenceExerciseSolution.isExerciseSubGroupSupervisor
            - referenceExerciseSolution.isExerciseSuperGroupAdmin

    - allow: true
      resource: referenceExerciseSolution
      actions:
          - delete
          - evaluate
          - deleteEvaluation
      conditions:
          - referenceExerciseSolution.isAuthor

    - allow: true
      resource: referenceExerciseSolution
      actions:
          - delete
      conditions:
          or:
            - referenceExerciseSolution.isExerciseAuthor
            - referenceExerciseSolution.isExerciseSuperGroupAdmin

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - viewDetail
      conditions:
          - exercise.isPublic

    - allow: true
      role: supervisor-student
      resource: exercise
      actions:
          - viewAll
          - viewAllAuthors
          - viewAllTags

    - allow: true
      role: supervisor-student
      resource: group
      actions:
          - createExercise
      conditions:
          - group.isSupervisor
          - group.isNotArchived

    #############################
    # Uploaded file permissions #
    #############################

    - allow: true
      role: scope-read-all
      resource: uploadedFile
      actions:
          - download
          - viewDetail
          - downloadSupplementaryFile

    - allow: true
      role: student
      resource: uploadedFile
      actions:
          - upload

    - allow: true
      role: student
      resource: uploadedPartialFile
      actions:
          - appendPartial
          - cancelPartial
          - completePartial
      conditions:
          - file.isStartedByCurrentUser

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          or:
            - file.isSolutionInSupervisedOrObservedGroup
            - file.isReferenceSolutionInSupervisedOrObserverdSubGroup
            - file.isPublic
            - file.isOwner
            - file.isRelatedToAssignment

    - allow: true
      role: supervisor-student
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isAttachmentFile
          - file.isExercisePublic

    - allow: true
      role: supervisor-student
      resource: uploadedFile
      actions:
          - viewDetail
          - downloadSupplementaryFile
      conditions:
          or:
            - file.isAuthorOfSupplementaryFileExercises
            - file.isSupplementaryInGroupUserSupervises

    #####################################
    # Runtime environments permissions #
    #####################################

    - allow: true
      role: scope-read-all
      resource: runtimeEnvironment
      actions:
          - viewAll

    - allow: true
      role: student
      resource: runtimeEnvironment
      actions:
          - viewAll

    ##############################
    # Hardware group permissions #
    ##############################

    - allow: true
      role: scope-read-all
      resource: hardwareGroup
      actions:
          - viewAll

    - allow: true
      role: supervisor-student
      resource: hardwareGroup
      actions:
          - viewAll

    #########################
    # Pipelines permissions #
    #########################

    - allow: true
      role: scope-read-all
      resource: pipeline
      actions:
          - viewDetail
          - viewAll

    - allow: true
      role: supervisor-student
      resource: pipeline
      actions:
          - viewDetail
          - viewAll

    - allow: true
      role: supervisor-student
      resource: pipeline
      actions:
          - update
          - remove
          - fork
          - viewDetail
      conditions:
          - pipeline.isAuthor

    ###################
    # Sis permissions #
    ###################

    - allow: true
      role: scope-read-all
      resource: sis
      actions:
        - viewTerms
        - viewCourses

    - allow: true
      role: supervisor-student
      resource: sis
      actions:
        - createTerm
        - editTerm
        - deleteTerm
        - viewTerms

    - allow: true
      resource: sis
      actions:
        - createGroup
      conditions:
        - course.isSupervisor
        - groupContext.doesTermMatch
        - groupContext.isParentGroupAssociatedWithCourse

    - allow: true
      resource: sis
      actions:
        - viewCourses
      conditions:
        - sisId.isLinkedToUser

    - allow: true
      resource: sis
      actions:
        - bindGroup
        - unbindGroup
      conditions:
        - group.isAdmin
        - course.isSupervisor

    - allow: true
      resource: group
      actions: addStudent
      conditions:
        - group.isInSameInstance
        - student.isSameUser
        - group.isSisStudent
        - group.isNotArchived
        
    #################################
    # Shadow Assignment permissions #
    #################################

    - allow: true
      role: scope-read-all
      resource: shadowAssignment
      actions:
        - viewDetail
        - viewAllPoints

    - allow: true
      role: student
      resource: shadowAssignment
      actions:
          - viewDetail
      conditions:
          - assignment.isAssignee
          - assignment.isPublic

    - allow: true
      resource: shadowAssignment
      actions:
          - viewDetail
          - viewAllPoints
      conditions:
          - assignment.isSupervisor

    - allow: true
      resource: shadowAssignment
      actions:
          - update
          - remove
          - createPoints
          - updatePoints
          - removePoints
      conditions:
          - assignment.isSupervisor
          - assignment.isInActiveGroup

    - allow: true
      resource: group
      actions:
          - createShadowAssignment
      conditions:
          - group.isSupervisor
          - group.isNotArchived

    ############################
    # Notification permissions #
    ############################

    - allow: true
      role: scope-read-all
      resource: notification
      actions:
        - viewAll
        - viewCurrent
        - viewDetail

    - allow: true
      role: student
      resource: notification
      actions:
        - viewCurrent

    - allow: true
      resource: notification
      actions:
        - viewDetail
      conditions:
        - notification.hasRole
        - or:
          - notification.isGlobal
          - notification.isGroupsMember

    - allow: true
      role: supervisor
      resource: notification
      actions:
        - create

    - allow: true
      resource: notification
      actions:
        - addGroup
      conditions:
        - group.isAdmin

    - allow: true
      resource: notification
      actions:
        - update
        - remove
      conditions:
        - or:
          - notification.isAncestorGroupAdmin
          - notification.isAuthor

    #########################
    # AsyncJobs permissions #
    #########################

    - allow: true
      role: scope-read-all
      resource: asyncJob
      actions:
        - viewDetail
        - list

    - allow: true
      role: student
      resource: asyncJob
      actions:
        - viewDetail
        - abort
      conditions:
        - asyncJob.isCreator

    - allow: true
      role: student
      resource: asyncJob
      actions:
        - list
