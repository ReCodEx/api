roles:
    - name: unauthenticated

    - name: student
      parents: unauthenticated

    - name: supervisor
      parents: student

    - name: superadmin
permissions:
    - allow: true
      role: superadmin

    #############################
    # User takeover permissions #
    #############################

    - allow: true
      role: superadmin
      resource: user
      actions:
        - takeOver

    - allow: false  # A safety mechanism that prevents us from accidentaly allowing account takeover to non-admins (e.g. by wildcard rules)
      actions:
        - takeOver

    #####################
    # Group permissions #
    #####################

    - allow: true
      role: student
      resource: group
      actions: viewAssignments
      conditions: group.isMember

    - allow: true
      role: student
      resource: group
      actions:
          - viewStudents
          - viewDetail
          - viewSubgroups
          - viewSupervisors
          - viewStudents
          - viewAdmin
      conditions:
          - group.canAccessDetail
          - group.isInSameInstance

    - allow: true
      role: student
      resource: group
      actions: viewPublicDetail
      conditions: group.isInSameInstance

    - allow: true
      resource: group
      actions:
          - setAdmin
      conditions: group.isAdmin

    - allow: true # A student can join public groups
      role: student
      resource: group
      actions:
        - addStudent
      conditions:
        - group.isPublic
        - group.isInSameInstance
        - student.isSameUser

    - allow: true
      role: student
      resource: group
      actions:
        - removeStudent # A student can leave any group
        - viewStudentStats
      conditions:
        - group.isMember
        - student.isSameUser

    - allow: true
      role: student
      resource: group
      actions: viewStats
      conditions: group.areStatsPublic

    - allow: true
      resource: group
      actions:
          - addStudent
          - removeStudent
          - viewExercises
          - viewStats
          - viewStudentStats
          - viewPublicDetail
      conditions: group.isSupervisor

    - allow: true
      resource: group
      actions:
          - update
          - remove
          - addSubgroup
          - addSupervisor
          - removeSupervisor
      conditions: group.isAdmin

    ########################
    # Instance permissions #
    ########################

    - allow: true
      role: unauthenticated
      resource: instance
      actions:
        - viewAll
        - viewDetail

    - allow: true
      role: supervisor
      resource: instance
      actions: addGroup
      conditions: instance.isMember

    - allow: true
      role: student
      resource: instance
      actions:
          - viewGroups

    - allow: true
      role: supervisor
      resource: instance
      actions: []

    - allow: true
      role: superadmin # TODO instance admin role
      resource: instance
      actions:
          - viewUsers
          - viewLicences
      conditions:
          - instance.isMember

    ####################
    # User permissions #
    ####################

    - allow: true
      role: student
      resource: user
      actions:
        - viewPublicData
      conditions:
        - user.isInSameInstance

    - allow: true
      role: student
      resource: user
      actions:
          - updateProfile
          - viewExercises
          - viewInstances
          - viewGroups
          - viewDetail
      conditions: user.isSameUser

    ##########################
    # Assignment permissions #
    ##########################

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewDetail
          - submit
      conditions:
          - assignment.isAssignee
          - assignment.isPublic

    - allow: true
      resource: assignment
      actions:
          - viewDetail
          - update
          - remove
          - submit
          - viewSubmissions
          - resubmitSubmissions
      conditions:
          - assignment.isSupervisor

    - allow: true
      resource: group
      actions:
          - assignExercise
      conditions:
          - exercise.isAuthor
          - group.isSupervisor

    - allow: true
      resource: group
      actions:
          - assignExercise
      conditions:
          - exercise.isSubGroupSupervisor

    - allow: true
      resource: group
      actions:
          - assignExercise
      conditions:
          - exercise.isPublic
          - group.isSupervisor

    - allow: true
      role: student
      resource: assignment
      actions:
          - viewSubmissions
      conditions:
          - student.isSameUser

    ##########################
    # Submission permissions #
    ##########################

    - allow: true
      role: student
      resource: submission
      actions:
          - viewDetail
          - viewEvaluation
      conditions:
          - submission.isAuthor

    - allow: true
      role: student
      resource: submission
      actions:
          - viewEvaluationDetails
      conditions:
          - submission.areEvaluationDetailsPublic
          - submission.isAuthor

    - allow: true
      resource: submission
      actions:
          - viewDetail
          - viewEvaluation
          - viewEvaluationDetails
          - viewEvaluationValues
          - viewResubmissions
          - setBonusPoints
          - setAccepted
          - downloadResultArchive
      conditions:
          - submission.isSupervisor

    #######################
    # Comment permissions #
    #######################

    - allow: true
      role: student
      resource: comment
      actions:
          - alter
      conditions:
          - comment.isAuthor

    - allow: true # TODO
      role: student
      resource: comment
      actions:
          - createThread
          - viewThread
          - addComment

    ########################
    # Exercise permissions #
    ########################

    - allow: true
      resource: exercise
      actions:
          - viewDetail
          - viewLimits
          - setLimits
          - viewScoreConfig
          - setScoreConfig
          - update
          - remove
          - fork
          - addReferenceSolution
          - deleteReferenceSolution
          - evaluateReferenceSolution
          - createPipeline
          - viewPipelines
      conditions:
          - exercise.isAuthor

    - allow: true
      resource: exercise
      actions:
          - viewDetail
          - viewLimits
          - viewScoreConfig
          - addReferenceSolution
          - viewPipelines
      conditions:
          - exercise.isSubGroupSupervisor

    - allow: true
      resource: exercise
      actions:
          - deleteReferenceSolution
          - evaluateReferenceSolution
      conditions:
          - referenceExerciseSolution.isAuthor

    - allow: true
      role: supervisor
      resource: exercise
      actions:
          - viewDetail
      conditions:
          - exercise.isPublic

    - allow: true
      role: supervisor
      resource: exercise
      actions:
          - viewAll

    - allow: true
      role: supervisor
      resource: group
      actions:
          - createExercise
      conditions:
          - group.isSupervisor

    #############################
    # Uploaded file permissions #
    #############################

    - allow: true
      role: student
      resource: uploadedFile
      actions:
          - upload

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isSolutionInSupervisedGroup

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isReferenceSolutionInSupervisedSubGroup

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isPublic

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isOwner

    - allow: true
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isRelatedToAssignment

    - allow: true
      role: supervisor
      resource: uploadedFile
      actions:
          - download
          - viewDetail
      conditions:
          - file.isAdditionalExerciseFile
          - file.isExercisePublic

    - allow: true
      role: supervisor
      resource: uploadedFile
      actions:
          - viewDetail
          - downloadSupplementaryFile
      conditions:
          - file.isAuthorOfSupplementaryFileExercises

    - allow: true
      role: supervisor
      resource: uploadedFile
      actions:
          - viewDetail
          - downloadSupplementaryFile
      conditions:
          - file.isSupplementaryInGroupUserSupervises

    #####################################
    # Runtime environments permisssions #
    #####################################

    - allow: true
      role: student
      resource: runtimeEnvironment
      actions:
          - viewAll

    ##############################
    # Hardware group permissions #
    ##############################

    - allow: true
      role: supervisor
      resource: hardwareGroup
      actions:
          - viewAll

    #########################
    # Pipelines permissions #
    #########################

    - allow: true
      role: supervisor
      resource: pipeline
      actions:
          - viewDetail
          - viewAll

    - allow: true
      role: supervisor
      resource: pipeline
      actions:
          - update
          - remove
          - fork
          - viewDetail
      conditions:
          - pipeline.isAuthor

      ###################
      # Sis permissions #
      ###################

    - allow: true
      role: supervisor
      resource: sis
      actions:
        - createTerm

    - allow: true
      resource: sis
      actions:
        - createGroup
      conditions:
        - course.isSupervisor
        - groupContext.doesTermMatch
        - groupContext.isParentGroupAssociatedWithCourse

    - allow: true
      resource: sis
      actions:
        - viewCourses
      conditions:
        - sisId.isLinkedToUser

    - allow: true
      resource: sis
      actions:
        - bindGroup
      conditions:
        - group.isSupervisor
        - course.isSupervisor

    - allow: true
      resource: group
      actions: addStudent
      conditions:
        - group.isInSameInstance
        - student.isSameUser
        - group.isSisStudent
